{
  "compileOnSave": false,
  "buildOnSave": false,
  "baseUrl": "types",
  "typeRoots": ["types"],
  "compilerOptions": {
    "module": "commonjs",
    // "moduleResolution": "classic",
    "target": "es2017",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["src/utils/*"],
      "app/*": ["src/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core" // needed for Babel v7
  },
  "exclude": ["node_modules", "dist"]
}
